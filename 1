#include <cstring>

int mystrlen(const char *str) {
    int length = 0;
    while (*str != '\0') {
        length++;
        str++;
    }
    return length;
}

char *mystrcpy(char *str1, const char *str2) {
    char *original = str1;
    while ((*str1++ = *str2++) != '\0');
    return original;
}

char *mystrcat(char *str1, const char *str2) {
    char *original = str1;
    while (*str1 != '\0') {
        str1++;
    }
    while ((*str1++ = *str2++) != '\0');
    return original;
}

char *mystrchr(char *str, char s) {
    while (*str != '\0') {
        if (*str == s) {
            return str;
        }
        str++;
    }
    return nullptr;
}

char *mystrstr(char *str1, char *str2) {
    int len1 = mystrlen(str1);
    int len2 = mystrlen(str2);

    for (int i = 0; i <= len1 - len2; i++) {
        int j;
        for (j = 0; j < len2; j++) {
            if (str1[i + j] != str2[j]) {
                break;
            }
        }
        if (j == len2) {
            return &str1[i];
        }
    }

    return nullptr;
}
